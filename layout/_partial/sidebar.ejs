<aside>
    <% if (theme.widget.calendar) { %>
    <%- partial('_widget/calendar') %>
    <% } %>
    <% if (is_post() && theme.widget.catalogue) { %>
    <%- partial('_widget/catalogue') %>
    <% } %>
    <% if (theme.widget.archives && site.posts.length) { %>
    <%- partial('_widget/archives', {}, {cache: true}) %>
    <% } %>
    <% if (theme.widget.categories && site.categories.length) { %>
    <%- partial('_widget/categories', {}, {cache: true}) %>
    <% } %>
    <% if (theme.widget.tagcloud && site.tags.length) { %>
    <%- partial('_widget/tagcloud', {}, {cache: true}) %>
    <% } %>
    <% if (theme.widget.recents && site.posts.length) { %>
    <%- partial('_widget/recents', {}, {cache: true}) %>
    <% } %>
    <% if (theme.widget.links) { %>
    <%- partial('_widget/links', {}, {cache: true}) %>
    <% } %>
</aside>